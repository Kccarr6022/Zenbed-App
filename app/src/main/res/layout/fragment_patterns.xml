<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".ui.patterns.PatternsFragment">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/zenbed_template"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        app:layout_constraintEnd_toEndOf="@id/parent"
        app:layout_constraintStart_toStartOf="@id/parent"
        app:layout_constraintTop_toTopOf="@id/parent"
        tools:ignore="NotSibling" />


    <androidx.cardview.widget.CardView
        android:id="@+id/rate_of_change_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/settingscard">

            <ImageView
                android:id="@+id/card_icon_background"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:src="@drawable/card_icon"
                android:background="@null"/>

            <ImageView
                android:id="@+id/card_icon"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:src="@drawable/bed"
                android:background="@null"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins"
                android:gravity="left"
                android:text=" Pattern rate of change = 15%"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"></TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>
